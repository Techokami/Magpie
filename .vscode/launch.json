    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",

            // Webserver
            "module": "flask",
            "env": {
                "FLASK_APP": "endpoints.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host",
                "0.0.0.0",
                "--port",
                "25230",
            ],
            "jinja": true
        },
        {
            "name": "Python: Local version",
            "type": "debugpy",
            "request": "launch",
            "program": "magpie.py",
            "args": [
                "--local",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Sprite extractor",
            "type": "debugpy",
            "request": "launch",
            "program": "spriteExtractor.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "NPM Watch",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "watch"]
          },
          {
            "name": "NPM Dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"]
          }
    ]
}